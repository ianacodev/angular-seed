{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noEmitHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": true,
  "buildOnSave": true
}
